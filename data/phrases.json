    {
      "id": "phrase_001",
      "categories": ["greeting", "introduction"],
      "translations": {
        "en": {
          "text": "Hello, how are you today?",
          "phonetic": "heh-LOH, how ar yoo tuh-DAY"
        },
        "zu": {
          "text": "Sawubona, unjani namhlanje?",
          "phonetic": "sah-woo-BOH-nah, oon-JAH-nee nahm-HLAHN-jeh"
        },
        "xh": {
          "text": "Molo, unjani namhlanje?",
          "phonetic": "MOH-loh, oon-JAH-nee nahm-HLAHN-jeh"
        },
        "af": {
          "text": "Hallo, hoe gaan dit vandag met jou?",
          "phonetic": "HAH-loh, hoo khahn dit fun-DAKH met yoh"
        },
        "nso": {
          "text": "Thobela, o bjang lehono?",
          "phonetic": "toh-BEH-lah, oh BYANG leh-HOH-noh"
